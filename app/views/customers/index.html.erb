<p style="color: green"><%= notice %></p>

<% content_for :title, "Customers" %>

<h1 class="text-5xl font-bold text-blue-700 mb-4">Customers</h1>

<%= link_to "New customer", new_customer_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg shadow" %>

<hr class="my-6 border-gray-300">

<div id="customers">
  <% @customers.each do |customer| %>
    <%= render customer %>
    <p class="mb-4">
      <%= link_to "Show this customer", customer, class: "text-blue-600 hover:text-blue-800 underline" %>
    </p>
  <% end %>
</div>
