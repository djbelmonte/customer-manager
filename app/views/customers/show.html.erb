<p style="color: green"><%= notice %></p>

<%= render @customer %>

<hr class="my-6 border-gray-300">

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer), class: "block text-blue-600 hover:text-blue-800 underline" %>
  <%= link_to "Back to customers", customers_path, class: "block text-blue-600 hover:text-blue-800 underline" %>

  <%= button_to "Destroy this customer", @customer, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this customer?" }, class: "text-red-600 hover:text-red-800 underline" %>
</div>
