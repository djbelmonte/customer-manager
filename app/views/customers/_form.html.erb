<%= form_with(model: customer, class: "space-y-4 max-w-md") do |form| %>
  <% if customer.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-3 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
      </h2>
      <ul class="list-disc pl-5">
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :first_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :last_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :birthday, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :birthday, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :phone_number, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.submit "Save", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
